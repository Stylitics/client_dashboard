<!DOCTYPE html>
<html>
<head>
  <title><%= yield :title %> ~ Client Dashboard</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<% flash.each do |name, msg| %>
  <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
    <%= msg %>
  </div>
<% end %>

<div class="container-header">
  <div class="container-menu">
    <div class="menu">
      <ul>
        <li class="active"><a href="#" id="open-filters"><i id="open-filter-icon" class="icon-chevron-right"></i></a></li>
        <li class="<%= "active" if request[:action] == "index" %>"><%= link_to 'Home', root_path %></li>
        <li><a href="#">Catalog</a></li>
        <li><a href="#">Segments</a></li>
        <li><a href="#">Competitors</a></li>
        <li class="<%= "active" if request[:action] == "trends" %>"><%= link_to "Trends", trends_path %></li>
        <li><a href="#">Local</a></li>
      </ul>
    </div>
  </div>
  <div class="container-logo">
    <div class="logo">
      &nbsp;
    </div>
  </div>
</div>
<div class="container-content-one">   
  <div class="middle">
    <div class="left">
      <%= yield :sidebar %>
    </div>
    <div class="wide">
      <%= yield %>
    </div>
    <div class="right">
      <%= yield :sidebar_r %>
    </div>
  </div>
</div>
<div class="container-content-one">
  <div class="bottom">
    <%= yield :bottom %>
  </div>
</div>

</body>
</html>
