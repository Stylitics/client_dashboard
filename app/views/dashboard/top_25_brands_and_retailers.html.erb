<% title 'Top 25 Brands & Retailers' %>

<%= content_for :title do %>
  <%= render partial: "title" %>
<% end %>

<%= content_for :segment do %>
  <%= render partial: "filter" %>
<% end %>

<%= content_for :half_1 do %>
	<h2>People who own my brand also own</h2>
	<div id="top-25-brands-and-retailers-chart" data-json="<%= chart_path(@chart, t: Time.now.to_i) %>" class="own_25">
	</div>
<% end %>
<%= content_for :half_2 do %>
	<h2>People who own my brand also shop at</h2>
	<div class="shop_at_25">
	</div>
<% end %>

<script type="text/template" id="top-item-template-own">
	{{#own}}
		<div class="top-item">
			<div class="icon">
				<img src="{{logo}}" border="0" />
			</div>
			<div class="text">
				<h3>{{name}} - {{percentage}}% Own</h3>
			</div>
		</div>
	{{/own}}
</script>

<script type="text/template" id="top-item-template-shop">
	{{#shop_at}}
		<div class="top-item">
			<div class="icon">
				<img src="{{logo}}" border="0" />
			</div>
			<div class="text">
				<h3>{{name}} - {{percentage}}% Own</h3>
			</div>
		</div>
	{{/shop_at}}
</script>