        <%= f.input :retailer_sub_opt, as: :select, collection: @retailer_collection, label: false, input_html: { class: "chosen", multiple:"" } %>
      </div>
      <div class="filter-big-element">
        <div class="label-text"><h3>Style</h3></div>
        <%= f.input :style_add_opt, as: :select, collection: ["All"] + @style_collection, label: false, input_html: { class: "chosen", multiple:"" } %>
      </div>
      <div class="filter-big-element">
        <div class="label-text"><h3></h3></div>
        <%= f.input :style_sub_opt, as: :select, collection: @style_collection, label: false, input_html: { class: "chosen", multiple:"" } %>
      </div>
      <div class="filter-big-element" id="price-filter-opt">
        <div class="label-text"><h3>Price</h3></div>
        <div class="content-value">
          <div class="slider" data-min-input="chart_run_low_price_opt" data-max-input="chart_run_high_price_opt"></div>
          <%= f.input :low_price_opt, as: :hidden %>
          <%= f.input :high_price_opt, as: :hidden %>
        </div>
        <h3><span class="col-pink"><span id="min"></span> - <span id="max"></span></span></h3>
      </div>
      <div class="filter-small-element">
        <h3>No Price</h3>
        <%= f.input :no_price_opt, as: :radio_buttons, collection: [["All", "NULL"], ["Include", "TRUE"], ["Exclude", "FALSE"]], label: false %>
      </div>
      <div class="filter-big-element">
        <div class="label-text"><h3>When</h3></div>
        <%= f.input :start_date_opt, as: :string, input_html: { placeholder: "yyyy-mm-dd", class: "datepicker" }, label: false %>
        <%= f.input :end_date_opt, as: :string, input_html: { placeholder: "yyyy-mm-dd", class: "datepicker" }, label: "to" %>
      </div>
    </div>
    <div style="clear:left">&nbsp;</div>
</div>
